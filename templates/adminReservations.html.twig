{% extends "admin.html.twig" %}

{% block adminContent %}
    <div class="admin_container">
        <section class="admin_section">
            <h1>{{ t('admin.reservations.title')|trans }}</h1>
            {% include 'pagination.html.twig' with {'base_link': (path('app_admin_reservations') ~ '?order=' ~ current_order ~ '&direction=' ~ current_direction ~ '&per_page=' ~ per_page) } %}
            {% include 'sortableList.html.twig' with {'translation_base' : 'reservations.list', 'data': reservations, 'location': 'app_admin_reservations', 'edit': false} %}
            {% include 'pagination.html.twig' with {'base_link': (path('app_admin_reservations') ~ '?order=' ~ current_order ~ '&direction=' ~ current_direction ~ '&per_page=' ~ per_page), 'variant': 'top'} %}
        </section>
    </div>
{% endblock %}