{% extends 'base.html.twig' %}

{% block title %}Zaloguj siÄ™!{% endblock %}

{% block main %}
<div class="login__container">
    <div class="login-box">
        <div class="avatarr">
           <img src="" title="giulia" alt="">
        </div>
        <form method="post">
            <h2 >Witamy!</h2>
            <div class="form--input-box">
                <label for="inputUsername">Login</label>
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
            </div>
            <div class="form--input-box">
                <label for="inputPassword">Haslo</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button class="btn" type="submit">Zaloguj sie</button>
        </form>
        <br/>
        <a href="{{ path('app_register') }}">{{ t('security.goRegister')|trans }}</a>
    </div>
    <canvas id="bg-anim"></canvas>
</div>

        
{% endblock %}

